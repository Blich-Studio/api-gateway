# Application
NODE_ENV=development
PORT=3000

# Database
# For local development with docker-compose, use localhost
# For Cloud SQL: use private IP via VPC connector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=blichstudio-data
POSTGRES_SSL=false

# Security
BCRYPT_SALT_ROUNDS=12

# Google Cloud Storage (for file uploads)
# Get credentials: https://console.cloud.google.com/iam-admin/serviceaccounts
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=blich-studio-uploads
GCS_BUCKET_LOCATION=US
# For local dev only - path to service account JSON key file
# In production, Cloud Run uses Application Default Credentials (no key file needed)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Optional: Custom public URL (defaults to https://storage.googleapis.com/{bucket})
# GCS_PUBLIC_URL=https://storage.googleapis.com/blich-studio-uploads

# Email Configuration
# SendGrid API key (get from https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=your-sendgrid-api-key-here
# Email address to send from (must be verified in SendGrid)
EMAIL_FROM=noreply@example.com
# Application URL for verification links
APP_URL=http://localhost:3000
# Company name for email templates
COMPANY_NAME=Blich Studio

# Email Verification
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# NPM (for private packages)
NPM_TOKEN=your-npm-token-here

# For Cloud SQL in production (optional - uses Unix socket)
# INSTANCE_CONNECTION_NAME=project:region:instance
# INSTANCE_UNIX_SOCKET=/cloudsql/project:region:instance
